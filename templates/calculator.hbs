<div class="travel-calculator">
	{{!-- Mode Selector --}}
	<div class="header-group mode-group">
		<label>{{localize "TravelPace.Labels.CalculationMode"}}</label>
		<div class="mode-selector">
			{{#each modes}}
				<label class="radio-label">
					<input type="radio" name="travelpace_mode" value="{{this.id}}" {{#if @first}}checked{{/if}}>
					{{localize this.label}}
				</label>
			{{/each}}
		</div>
	</div>
	<hr />

	{{!-- Distance to Time Mode --}}
	<div class="distance-to-time">
		<div class="form-group">
			<label for="travelpace_distance">{{localize "TravelPace.Labels.Distance"}} ({{units.distance}})</label>
			<input type="number" id="travelpace_distance" placeholder="0" min="0" step="0.1">
		</div>
	</div>

	{{!-- Time to Distance Mode --}}
	<div class="time-to-distance" style="display: none;">
		<div class="form-group">
			<label for="travelpace_days">{{localize "TravelPace.Labels.Days"}}</label>
			<input type="number" id="travelpace_days" value="0" min="0">
		</div>

		<div class="form-group">
			<label for="travelpace_hours">{{localize "TravelPace.Labels.Hours"}}</label>
			<input type="number" id="travelpace_hours" value="0" min="0" max="23">
		</div>
	</div>

	{{!-- Pace Selection --}}
	<div class="form-group">
		<label for="travelpace_pace">{{localize "TravelPace.Labels.Pace"}} ({{this.paces.[0].speed}})</label>
		<select id="travelpace_pace">
			{{#each paces}}
				<option value="{{this.id}}">{{localize this.label}}</option>
			{{/each}}
		</select>
	</div>

	{{!-- Mount Selection (if available) --}}
	{{#if hasMounts}}
		<div class="form-group">
			<label for="travelpace_mount">{{localize "TravelPace.Labels.TransportationMethod"}}</label>
			<select id="travelpace_mount">
				<option value="">{{localize "TravelPace.Labels.NoMount"}}</option>
				{{#each mounts}}
					<option value="{{this.id}}">{{this.name}}</option>
				{{/each}}
			</select>
		</div>
	{{/if}}

	{{!-- Calculation Preview --}}
	<div class="calculation-preview-container">
		<h3>{{localize "TravelPace.Preview.Title"}}</h3>
		<div class="calculation-preview">
			{{localize "TravelPace.Preview.Empty"}}
		</div>
	</div>

	{{!-- Submit Button --}}
	<div class="form-buttons">
		<button type="button" data-action="submitCalculation" class="submit-button">
			<i class="fas fa-comments"></i>
			{{localize "TravelPace.Buttons.Calculate"}}
		</button>
	</div>
</div>
